<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MonitoringKJABB" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dragonfly</item>
        <item name="colorSecondaryVariant">@color/blue_dragonfly_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextMainTitle">
        <item name="fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextDescription">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardTextTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardTextValue">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>